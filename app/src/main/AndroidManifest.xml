            android:exported="true" />
        <activity
            android:name="com.manager.btlonappbanhangonline.activity.LoginActivity"
            android:exported="true" />
        <activity
            android:name="com.manager.btlonappbanhangonline.activity.DetailActivity"
            android:exported="true" />
        <activity
            android:name="com.manager.btlonappbanhangonline.activity.LaptopActivity"
            android:exported="true" />
        <activity
            android:name="com.manager.btlonappbanhangonline.activity.PhoneActivity"
            android:exported="true" />
        <activity
            android:name="com.manager.btlonappbanhangonline.activity.MainActivity"
            android:exported="true" />

        <service
            android:name="com.manager.btlonappbanhangonline.Service.FirebaseMessagerReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>