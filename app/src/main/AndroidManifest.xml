            android:name="com.manager.btlonappbanhangonline.activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.manager.btlonappbanhangonline.activity.SearchActivity"
